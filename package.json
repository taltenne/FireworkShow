{
  "name": "fireworkshow",
  "version": "1.0.0",
  "description": "A desktop firework application built with Electron, React, and TypeScript",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev:renderer": "vite",
    "dev:main": "ts-node --esm --transpile-only electron/main.ts",
    "build:renderer": "vite build",
    "build:main": "tsc -p electron/tsconfig.json",
    "build": "npm run build:renderer && npm run build:main",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taltenne/FireworkShow.git"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "fireworks",
    "desktop-app"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/taltenne/FireworkShow/issues"
  },
  "homepage": "https://github.com/taltenne/FireworkShow#readme",
  "dependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.1"
  }
}
